<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for weather forecast list item for today -->


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_city_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/light"
            android:textColor="@color/white"
            android:textSize="26sp"/>

        <TextView
            android:id="@+id/list_item_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/light"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </LinearLayout>


    <LinearLayout

        android:layout_alignRight="@+id/list_item_currentTemp_textview"
        android:layout_alignLeft="@+id/list_item_currentTemp_textview"
        android:layout_above="@+id/list_item_currentTemp_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:orientation="horizontal">

        <ImageView


            android:id="@+id/list_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"/>

        <TextView


            android:id="@+id/list_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/light"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </LinearLayout>


    <TextView
        android:layout_marginLeft="8dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/list_item_currentTemp_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@string/thin"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="120sp"
        android:layout_marginBottom="-16dp"
        />



</RelativeLayout>






